<div class="col-md-12">
  <!-- <div class="job">
    <%= link_to("Add a job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>-->
  <div class="dropdown pull-right">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      排序
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %></li>
      <li><%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %></li>
      <li><%= link_to("按照发表时间排序", jobs_path ) %></li>
    </ul>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>职缺</td>
        <td>薪资下限</td>
        <td>薪资上限</td>
        <td>刊登时间</td>
      </tr>
    </thead>
    </tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= link_to(job.wage_lower_bound) %></td>
          <td><%= link_to(job.wage_upper_bound) %></td>
          <td><%= link_to(job.created_at) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
